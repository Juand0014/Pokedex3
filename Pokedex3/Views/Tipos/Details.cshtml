@model Pokedex3.Models.Tipo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<center>
    <div class="Container" style="width:700px;">
        <div class="Card">
            <div class="modal-content text-left">
                <div class="modal-header bg-dark">
                    <h5 class="modal-title text-white" id="exampleModalLabel">Detalles del Tipo</h5>
                </div>
                <div class="modal-body">
                    <dt class="col-sm-2">
                        Tipo
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Tipo1)
                    </dd>
                </div>
                <div class="modal-footer bg-transparent">
                    <div class="text-right">
                        <a class="btn btn-success"  asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                        <a class=" btn btn-outline-dark" asp-action="Index">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</center>
