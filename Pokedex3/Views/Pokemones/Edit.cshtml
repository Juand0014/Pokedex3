            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Ataque1" class="control-label"></label>
                    <input asp-for="Ataque1" class="form-control" required/>
                    <div class="valid-feedback">
                        Bien hecho muchachon!
                    </div>
                    <span asp-validation-for="Ataque1" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Ataque2" class="control-label"></label>
                    <input asp-for="Ataque2" class="form-control" required/>
                    <div class="valid-feedback">
                        Bien hecho muchachon!
                    </div>
                    <span asp-validation-for="Ataque2" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Ataque3" class="control-label"></label>
                    <input asp-for="Ataque3" class="form-control" required/>
                    <div class="valid-feedback">
                        Bien hecho muchachon!
                    </div>
                    <span asp-validation-for="Ataque3" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Ataque4" class="control-label"></label>
                    <input asp-for="Ataque4" class="form-control" required/>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <span asp-validation-for="Ataque4" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Region" class="control-label">Id de Region</label>
                <select asp-for="Region" class="form-control" asp-items="ViewBag.Region"></select>
                <div class="valid-feedback">
                    Bien hecho muchachon!
                </div>
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Id del Tipo</label>
                <select asp-for="Tipo" class="form-control" asp-items="ViewBag.Tipo"></select>
                <div class="valid-feedback">
                    Bien hecho muchachon!
                </div>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Volver</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>