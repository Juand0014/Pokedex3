@model Pokedex3.Models.Pokemon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="needs-validation" novalidate>
